generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Portfolio {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     Json     // { "en": "English Title", "fr": "Titre Français", ... }
  videos    String[] // URLs or file paths to videos
  images    String[] // URLs or file paths to images
  texts     Json     // { "en": ["desc1", "desc2"], "fr": ["desc1", "desc2"], ... }
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ContactUs {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   Json     // { "en": "English content", "fr": "Contenu français", ... }
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AboutUs {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   Json     // { "en": "English content", "fr": "Contenu français", ... }
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
