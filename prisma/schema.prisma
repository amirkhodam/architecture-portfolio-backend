generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum ELanguages {
  en @map("en")
  fr @map("fr")
}

model Portfolio {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     Json
  texts     Json
  media     Media[] // New relation
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum EMediaType {
  image @map("image")
  video @map("video")
}

type Media {
  id    String
  name  String
  path  String
  type  EMediaType // e.g., "image" or "video"
  index Int
}

model ContactUs {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   Json // { "en": "English content", "fr": "Contenu français", ... }
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AboutUs {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   Json // { "en": "English content", "fr": "Contenu français", ... }
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
